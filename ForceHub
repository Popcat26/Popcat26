local PLR2 = game.Players.LocalPlayer
local PLR = game.Players.LocalPlayer.Name
game.Players.LocalPlayer.PlayerAdded:Connect(function(player)
    error(player.Name .. "has joined the game")
end)
local A = Instance.new("Message", workspace)
A.Text = "ForceHubX - Slap Battles : ðŸ”´"
wait(5)
local B = Instance.new("Part", workspace.Arena["main island"])
B.Anchored = true
B.Position = Vector3.new(0,-8.5,0)
B.Size = Vector3.new(2048,1,2048)
B.Transparency = 0.5
B.Touched:Connect(function()
    while wait() do
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 70
    end
end)
B.Touched:Connect(function()
    while wait() do
        local args = {
            [1] = game:GetService("Players"):WaitForChild(PLR).Character:FindFirstChild("Right Arm")
        }
        
        game:GetService("ReplicatedStorage"):WaitForChild("b"):FireServer(unpack(args))        
    end
end)
B.Touched:Connect(function()
    while wait() do
        if PLR2.Name then
            game.Workspace:FindFirstChild("Default").Glove.Size = Vector3.new(30,30,30)
        end
    end
end)
A.Text = "ForceHubX - Slap Battles : ðŸŸ¢"
wait(5)
A:Destroy()
